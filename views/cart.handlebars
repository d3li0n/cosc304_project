<div class="w-75 mx-auto mb-5 mt-5">
	<div class="back-btn mb-4">
		<a href="/store" class="text-dark"><i class="fas fa-chevron-left"></i> Back To Store</a>
	</div>

	<div class="mt-2 cart-title fw-bold fs-3 d-block">
		My Shopping Cart
	</div>
	{{#if isCart }}
	<div class="cart-block row mt-4">
		<div class="col-sm-7 py-2">
			<div class="row align-items-start border-bottom cart-block-legend">
				<div class="col">
					Product Id
				</div>
				<div class="col">
					Product Name
				</div>
				<div class="col">
					Quantity
				</div>
				<div class="col">
					Price
				</div>
			</div>
			{{#each session.productList}}
			<div class="row align-items-start mt-4 mb-4 border-bottom">
				<div class="col">
					{{@key}}
				</div>
				<div class="col">
					{{this.title}}
				</div>
				<div class="col">
					{{this.quantity}}
				</div>
				<div class="col">
					${{this.totalPrice}}
				</div>
			</div>
			{{/each}}
		</div>
		<div class="col-sm-5">
			<div class="cart-summary-block">
				<div class="cart-block-legend-summary ps-3 pe-3 py-3 d-block rounded">
					<p class="fw-bold fs-3" style="color:#4e5154;">Summary</p>

					<div class="cart-order-total d-block text-secondary">
						<div class="row">
							<div class="col-7">
								Order total
							</div>
							<div class="col-5">$34000.30</div>
						</div>
						<div class="row mt-4">
							<div class="col-7">
								Shipping total
							</div>
							<div class="col-5">$200.30</div>
						</div>
						<div class="row mt-4 align-items-center border-top pt-2">
							<div class="col-7">
								Subtotal
							</div>
							<div class="col-5 fw-bold fs-5">$233333.20</div>
						</div>
					</div>
				</div>
			</div>
			<a class="mt-3 btn cart-btn-checkout-cart text-uppercase fw-bold p-3 d-block" href="/cart/checkout">Checkout</a>

			<div class="info-err-cart mt-2">
				<p class="text-center text-danger">* Credit Card Information Must Be Added To Account</p>
			</div>
		</div>
	</div>
	{{else}}
	<div class="empty-errList mt-5">
		<p class="text-center fw-bold fs-5">Currently, you don't have any items in your cart. ðŸ˜¥</p>
	</div>
	{{/if}}
</div>