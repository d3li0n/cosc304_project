<div class="w-75 mx-auto mb-5 mt-5">
	<div class="back-btn mb-4">
		<a href="/store" class="text-dark"><i class="fas fa-chevron-left"></i> Back To Store</a>
	</div>
	<div class="product-container d-flex flex-row">
		<div class="product-image d-block">
			<img src="/images/store_images/{{product.imageUrl}}" alt="" class="rounded d-block img-store-lx">
			<div class="row mt-2">
				<div class="col-6"><img src="/images/store_images/{{product.imageUrl}}" alt="" class="rounded d-block img-product-sm mx-auto"></div>
				<div class="col-6"><img src="/images/store_images/{{product.image}}" alt="" class="rounded d-block img-product-sm-secondary mx-auto"></div>
			</div>
		</div>
		<div class="product-content ms-4">
			<span class="product-item-legend-title text-secondary">Product Name</span>
			<p class="product-title fs-2 text-dark fw-bold">{{product.productTitle}}</p>
			<span class="store-item-legend-title" style="font-size: 1em;">Category: <span class="text-success">{{ product.productCategory}}</span></span><br />
			<span class="product-item-description-title text-secondary d-block mt-3">Product Description</span>
			<p class="product-descriptio">
				{{ product.productDescription}}
			</p>
			<span class="store-item-price-legend text-secondary d-block mt-1">
				Item Price
			</span>
			<span class="store-item-price text-dark fw-bold fs-4 d-block mb-1">
				${{ product.productPrice}}
			</span>
			<a class="btn btn-outline-light shop-btn-add-cart text-dark mt-2" data-prodId="{{ product.productId}}"><i class="far fa-star me-2"></i>Add to Cart</a>
		</div>
	</div>
	<div class="product-review-title mt-5">
		<p class="text-default fw-bold fs-4">Product Reviews</p>
	</div>
	<div class="row mt-3">
		{{#each reviews }}
		<div class="col-sm-12 mb-4 py-2 product-review-block">
			<div class="d-block product-review-block-header">
				<div class="customer-icon d-inline-flex align-items-center">
					<div class="customer-login-icon pe-3">
						<i class="fas fa-user fs-2"></i>
					</div>
					<div class="customer-login-text">
						<span class="product-review-block-header-customer fw-bold text-dark">{{this.customerName}}</span><span class="text-secondary"> - </span><span class="product-review-block-header-date text-secondary">{{this.dateReview}}</span>
						<div class="d-block">
							{{#each this.stars}}
							<span class="product-review-block-header-star"><i class="fas fa-star text-warning"></i></span>
							{{/each}}
						</div>
					</div>
				</div>
			</div>
			<div class="d-block prdouct-rewiev-comment mt-2">
				{{this.review}}
			</div>
		</div>
		{{/each}}
	</div>
</div>